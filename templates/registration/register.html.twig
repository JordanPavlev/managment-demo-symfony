{% extends 'base.html.twig' %}
    {% block stylesheets %}
    {{ encore_entry_link_tags('register') }}
    {{ encore_entry_link_tags('global') }}
    {% endblock %}
{% block title %}
  Create a new account
{% endblock %}

{% block body %}
  <div class="registration-form">
    <h1>Create a new account</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
    <div class="checkbox-terms">{{ form_row(registrationForm.agreeTerms) }}</div>
    <div class="checkbox"> {{ form_end(registrationForm) }}</div>
    <button type="submit" class="btn">Register</button>
    <label >Already have an account ? <a href="/login">Login to your account</a></label>
   
    
  </div>
{% endblock %}
